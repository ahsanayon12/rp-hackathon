<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <description>Lightning Web Component for redacting PII from call transcripts</description>
    <isExposed>true</isExposed>
    <masterLabel>Transcript Redactor</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage">
            <property name="title" type="String" default="Transcript Redactor" description="Component title"/>
            <property name="showSamples" type="Boolean" default="true" description="Show sample data toggle"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle> 